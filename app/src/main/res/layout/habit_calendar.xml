<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="week"
            type="by.aermakova.habitat.model.model.habit.HabitModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/habit_title"
            style="@style/RegularTitleTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="@{week.title}"
            app:layout_constraintEnd_toStartOf="@id/day_counter_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Зарядка" />

        <TextView
            android:id="@+id/day_counter_title"
            style="@style/SecondaryTitleTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/3"
            app:layout_constraintBottom_toBottomOf="@id/habit_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/habit_title"
            tools:text="1/3" />

        <TextView
            android:id="@+id/category_title"
            style="@style/SecondaryTitleTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/habit_title"
            tools:text="#здоровье" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/habit_days_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/category_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>