<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="by.aermakova.habitat.view.main.habit.AddNewHabitViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/title_top_margin"
            android:fontFamily="@font/proxima_nova_bold"
            android:text="@string/new_habit"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/title_regular_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/back"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/back"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:background="@color/color_white"
            android:drawableStart="@drawable/ic_back_arrow"
            android:drawableTint="@color/color_pink"
            app:layout_constraintBottom_toBottomOf="@id/title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_content_top_margin"
                android:layout_marginEnd="@dimen/activity_horizontal_margin">

                <TextView
                    android:id="@+id/category_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:theme="@style/RegularTitleTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/category_recycler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_small_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_title" />

                <TextView
                    android:id="@+id/name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_regular_margin"
                    android:text="@string/new_habit_title"
                    android:theme="@style/RegularTitleTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category_recycler" />


                <EditText
                    android:id="@+id/name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_field_high"
                    android:hint="@string/enter_habit_title"
                    android:text="@={viewModel.title}"
                    android:theme="@style/CustomEditText"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_title" />

                <TextView
                    android:id="@+id/duration_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_small_margin"
                    android:text="@string/new_habit_duration"
                    android:theme="@style/RegularTitleTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_edit_text" />

                <com.warkiz.widget.IndicatorStayLayout
                    android:id="@+id/duration_seek_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-16dp"
                    android:layout_marginTop="@dimen/activity_vertical_small_margin"
                    android:layout_marginEnd="-16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_title">

                    <com.warkiz.widget.IndicatorSeekBar
                        android:id="@+id/seek_bar_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:isb_indicator_content_layout="@layout/custom_indicator_oval"
                        app:isb_indicator_text_color="@color/color_white"
                        app:isb_indicator_text_size="18sp"
                        app:isb_max="50"
                        app:isb_min="10"
                        app:isb_progress="21"
                        app:isb_seek_smoothly="true"
                        app:isb_show_indicator="custom"
                        app:isb_thumb_color="@color/colorAccent"
                        app:isb_thumb_size="12dp"
                        app:isb_track_background_color="@color/colorPink"
                        app:isb_track_background_size="2dp"
                        app:isb_track_progress_color="@color/colorAccent"
                        app:isb_track_progress_size="4dp"
                        app:onStopTracking="@{viewModel.durationInDays}" />
                </com.warkiz.widget.IndicatorStayLayout>

                <TextView
                    android:id="@+id/schedule_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_regular_margin"
                    android:text="@string/new_habit_timetable"
                    android:theme="@style/RegularTitleTheme"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/duration_seek_bar" />

                <Spinner
                    android:id="@+id/schedule_spinner"
                    style="@style/spinner_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_regular_margin"
                    android:spinnerMode="dropdown"
                    app:addWeekdayStrategy="@{viewModel.selectWeekdaysStrategy}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/schedule_title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/week_days_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_vertical_small_margin"
                    android:visibility="gone"
                    app:visibility="@{viewModel.weekdaysRecyclerVisibility}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schedule_spinner" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_habit_remind"
                    android:theme="@style/RegularTitleTheme"
                    app:layout_constraintBottom_toBottomOf="@+id/notification_toggle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/notification_toggle" />

                <ToggleButton
                    android:id="@+id/notification_toggle"
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/activity_vertical_regular_margin"
                    android:background="@drawable/toggle_selector"
                    android:text=""
                    android:textOff=""
                    android:textOn=""
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/week_days_recycler"
                    app:toggleIsChecked="@{viewModel.notificationEnable}" />

                <TextView
                    android:id="@+id/time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_habit_remind_time"
                    android:theme="@style/RegularTitleTheme"
                    app:layout_constraintBottom_toBottomOf="@id/show_time_picker_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/show_time_picker_button"
                    app:selectedTime="@{viewModel.selectedTime}"
                    app:visibility="@{viewModel.notificationEnable}" />

                <Button
                    android:id="@+id/show_time_picker_button"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/color_white"
                    android:fontFamily="@font/proxima_nova_font"
                    android:text="@string/change_time"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/notification_toggle"
                    app:onClick="@{viewModel.openTimePicker}"
                    app:visibility="@{viewModel.notificationEnable}" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85" />

        <Button
            android:id="@+id/start_button"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_button_side_margin"
            android:layout_marginEnd="@dimen/activity_button_side_margin"
            android:background="@drawable/btn_custom_rect"
            android:fontFamily="@font/proxima_nova_bold"
            android:onClick="@{() -> viewModel.saveHabit()}"
            android:text="@string/create_txt"
            android:textAllCaps="false"
            android:textColor="@color/color_white"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.95" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>